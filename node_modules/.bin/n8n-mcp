#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/akhanbakhitov/Documents/nextMastra/node_modules/.pnpm/n8n-mcp@2.10.4/node_modules/n8n-mcp/dist/mcp/node_modules:/Users/akhanbakhitov/Documents/nextMastra/node_modules/.pnpm/n8n-mcp@2.10.4/node_modules/n8n-mcp/dist/node_modules:/Users/akhanbakhitov/Documents/nextMastra/node_modules/.pnpm/n8n-mcp@2.10.4/node_modules/n8n-mcp/node_modules:/Users/akhanbakhitov/Documents/nextMastra/node_modules/.pnpm/n8n-mcp@2.10.4/node_modules:/Users/akhanbakhitov/Documents/nextMastra/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/akhanbakhitov/Documents/nextMastra/node_modules/.pnpm/n8n-mcp@2.10.4/node_modules/n8n-mcp/dist/mcp/node_modules:/Users/akhanbakhitov/Documents/nextMastra/node_modules/.pnpm/n8n-mcp@2.10.4/node_modules/n8n-mcp/dist/node_modules:/Users/akhanbakhitov/Documents/nextMastra/node_modules/.pnpm/n8n-mcp@2.10.4/node_modules/n8n-mcp/node_modules:/Users/akhanbakhitov/Documents/nextMastra/node_modules/.pnpm/n8n-mcp@2.10.4/node_modules:/Users/akhanbakhitov/Documents/nextMastra/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../n8n-mcp/dist/mcp/index.js" "$@"
else
  exec node  "$basedir/../n8n-mcp/dist/mcp/index.js" "$@"
fi
